{
  "name": "@mainengine/backpack",
  "version": "1.0.0",
  "source": "src/index",
	"react-native": "src/index",
	"module": "lib/module/index",
	"types": "lib/typescript/index.d.ts",
  "scripts": {
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"**/*.{js,ts,tsx}\"",
		"prepack": "bob build",
		"release": "release-it",
		"example": "yarn --cwd example",
		"bootstrap": "yarn example && yarn install",
		"build": "yarn prepack && yarn pack"
	},

  "dependencies": {
    "react-native-logs": "^5.0.1"
  },
  "peerDependencies": {
		"react": "*",
		"react-native": "*"
	},
  "files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"*.podspec",
		"!lib/typescript/example",
		"!ios/build",
		"!android/build",
		"!android/gradle",
		"!android/gradlew",
		"!android/gradlew.bat",
		"!android/local.properties",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"!**/.*"
	],
	"keywords": [
		"react-native",
		"ios",
		"android"
	],
	"repository": "https://github.com/Main-Engine/backpack",
	"author": "Wesley Vance <me@wesvance.com> (https://github.com/wesvance)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Main-Engine/backpack/issues"
	},
	"homepage": "https://github.com/Main-Engine/backpack#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
  "resolutions": {
		"styled-components": "^5",
		"@types/react": "17.0.21"
	},
	"engines": {
		"node": ">= 16.0.0"
	},
	"packageManager": "^yarn@1.22.15",
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			[
				"module",
				{
					"configFile": true
				}
			],
			[
				"typescript",
				{
					"project": "../../tsconfig.build.json"
				}
			]
		]
	}
}
