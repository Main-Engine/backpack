{
  "name": "@mainengine/backpack",
  "version": "1.0.4",
  "source": "src/index",
  "main": "lib/module/index.js",
  "react-native": "lib/module/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install",
    "build": "yarn prepack && yarn pack"
  },
  "dependencies": {
    "expo-image": "^1.2.3",
    "expo-linear-gradient": "^12.1.2",
    "react-native-gesture-handler": "^2.10.2",
    "react-native-logs": "^5.0.1",
    "react-native-reanimated": "~3.1.0",
    "react-native-redash": "^18.1.0",
    "react-native-safe-area-context": "^4.5.3",
    "seedrandom": "^3.0.5",
    "styled-components": "5"
  },
  "devDependencies": {
    "react-native-builder-bob": "^0.20.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Main-Engine/backpack.git"
  },
  "author": "Wesley Vance <me@wesvance.com> (https://github.com/wesvance)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Main-Engine/backpack/issues"
  },
  "homepage": "https://github.com/Main-Engine/backpack#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "resolutions": {
    "styled-components": "^5",
    "@types/react": "~18.0.24"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "^yarn@1.22.15",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "configFile": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "description": "It's dangerous to go alone - this backpack of tools saves time developing expo apps.",
  "directories": {
    "lib": "lib"
  }
}
